body {
	margin: 50px;
	font: normal 400 0.8rem/1.2 Tahoma;
}

.wrapper-all {

	padding: 60px;
	max-width: 960px;
	margin: 0 auto;
}

.post {
	margin: 30px 0;
	padding: 20px;
	box-shadow: 0px 1px 3px rgba(0,0,0,.2);
}

.post a {
	text-decoration: none;
}

.post h3 {
	text-transform: uppercase;
}

.menu {
	text-align: center;
}

.menu > ul {
	list-style-type: none;
	display: inline-block;
}

.menu > ul li a {
	list-style-type: none;
	text-decoration: none;
	text-transform: uppercase;
	font-size: 1.2rem;
	padding: 10px;
}

.menu li {
	float: left;
}

header {
	margin-bottom: 30px;
}

.navigation.pagination {
	font-size: 1rem;
	padding-top: 20px;
}

.navigation.pagination a {
	text-decoration: none;
	font-weight: bold;
	box-sizing: content-box;
	display: inline-block;
}

.page-numbers {
	padding: 10px 15px;
}

.page-numbers:hover {
	transition: all .25s;
	background: rgba(0,0,0,.05);

	cursor: pointer;
}

.page-numbers.current {
	background: rgba(0,0,0,.05);

}

img.alignnone {
	display:block;
	max-width: 100%;
    height: auto;
}

.content h3 {
	text-transform: uppercase;
	color: #333;
	font-weight: bold;
	font-size: 1.4rem;
}

.link-title {
	text-decoration: none;
}